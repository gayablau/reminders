<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_reminders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminders.ui.RemindersFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_reminders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightPurple"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/add"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_reminders"
        app:layout_constraintEnd_toEndOf="@+id/recycler_view_reminders" />

</androidx.constraintlayout.widget.ConstraintLayout>